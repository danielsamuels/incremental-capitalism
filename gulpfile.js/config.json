{
  "root": {
    "appSrc": "./apps/**/assets",
    "src": "./assets",
    "dest": "./static/build"
  },

  "tasks": {
    "browserSync": {
      "notify": false,
      "open": false,
      "server": {
        "baseDir": "./"
      }
    },

    "js": {
      "src": "js",
      "dest": "js",
      "entries": {
        "app": ["./main.js"]
      },
      "extensions": ["js"],
      "babel": {
        "presets": ["es2015", "stage-0"],
        "plugins": ["transform-runtime"]
      },
      "extractSharedJs": true
    },
    "css": {
      "src": "css",
      "dest": "css",
      "extensions": ["css"]
    },

    "html": {
      "src": "html",
      "dest": "html",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["html", "json"],
      "excludeFolders": ["layouts", "shared", "macros", "data"]
    },

    "images": {
      "src": "img",
      "dest": "img",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    }
  }
}
